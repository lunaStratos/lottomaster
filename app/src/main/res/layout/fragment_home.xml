<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:padding="10dp">
    <!--현재회차 로또조회 -->
    <TextView
        android:id="@+id/insert_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회차번호"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/ball1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text="number"
            android:textColor="#ffffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/ball2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text="number"
            android:textColor="#ffffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/ball3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text="number"
            android:textColor="#ffffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/ball4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text="number"
            android:textColor="#ffffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/ball5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text="number"
            android:textColor="#ffffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/ball6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text="number"
            android:textColor="#ffffffff"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text="bonus"
            android:textColor="#ffffffff"
            android:textSize="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="당첨액수: "
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="당첨방식: "
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="1인당 1등 액수: "
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="총 1등 당첨 인수: "
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstAccumamnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0000원"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/firstHowTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000원"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/firstWinamnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0000원"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/firstPrzwnerCo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="방식"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>