<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/beforeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결과" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/beforeBall1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/beforeBall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/beforeBall3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/beforeBall4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/beforeBall5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/beforeBall6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+" />

        <TextView
            android:id="@+id/beforeBonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lottoball_image"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffffff" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="당첨액수: " />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="당첨방식: " />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1인당 1등 액수: " />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="총 1등 당첨 인수: " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/before_firstAccumamnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/beforefirstHowTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/beforefirstWinamnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/beforefirstPrzwnerCo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/insert_beforeNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/beforeLottoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="조회하기" />


</LinearLayout>